@model DataLayer.ViewModel.ChangePasswordInSignIn

<form asp-action="ChangeUserPassword" asp-controller="User" method="post" id="ChangeUserPassword" class="my-column  uk-padding-small" dir="rtl"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#ChangeUserPassword"
      data-ajax-complete="OnComplete">
    <div class="uk-modal-body uk-padding-small">
        <input type="hidden" asp-for="TellNo" />
        <label>رمز عبور فعلی را وارد کنید</label>
        <div class="uk-margin">
            <input class="uk-input uk-border-rounded" asp-for="Password">
            <span class="uk-text-danger" asp-validation-for="Password"></span>
        </div>
        <label>رمز عبور جدید را وارد کنید</label>
        <div class="uk-margin">
            <input class="uk-input uk-border-rounded" asp-for="NewPassword">
            <span class="uk-text-danger" asp-validation-for="NewPassword"></span>
        </div>

        <label>تکرار رمز عبور جدید</label>
        <div class="uk-margin">
            <input class="uk-input uk-border-rounded" asp-for="NewPasswrdConfirm">
            <span class="uk-text-danger" asp-validation-for="NewPasswrdConfirm"></span>
        </div>

    </div>
    <div class="uk-modal-footer uk-text-center">
        <span id="Erorr" class="uk-text-danger"></span>
        <button class="uk-button uk-button-small uk-border-rounded gradientButton center" type="submit">تایید</button>
    </div>
</form>
<script>
        function OnComplete() {
            $("#change-password").modal("hide");
            UIkit.notification("رمز شما تغیر یافت");
        }

</script>

