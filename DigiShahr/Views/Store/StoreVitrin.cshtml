            <input type="file" multiple>
            <a><span class="icon-holder uk-margin-left uk-margin-small-top" uk-icon="add-circle-outline" tabindex="-1"></span></a>
        </div>
        <div class="js-upload uk-position-absolute" uk-form-custom>
            <input type="file" multiple>
            <a><span class="icon-holder uk-margin-left uk-margin-large-top" uk-icon="create-outline" tabindex="-1"></span></a>
        </div>
        <!--<div uk-form-custom>
        <input type="file" name="banner">
        <a><span class="icon-holder uk-position-absolute uk-margin-left uk-margin-small-top" uk-icon="add-circle-outline" tabindex="-1"></span></a>-->
        @*<button class="uk-button uk-button-default uk-button-small uk-border-rounded" type="button" tabindex="-1">انتخاب لوگو</button>*@
        <!--</div>-->
        <div class="uk-margin-auto-vertical logoPlace mat center">
            <h3 class="center uk-margin-auto-vertical">
                افزودن یا ویرایش لوگو
            </h3>

            <div class=" center uk-margin-small-top">

                <div class="js-upload" uk-form-custom>
                    <input type="file" multiple>
                    <a><span class="icon-holder" uk-icon="add-circle-outline" tabindex="-1"></span></a>
                </div>
                <div class="js-upload" uk-form-custom>
                    <input type="file" multiple>
                    <a><span class="icon-holder" uk-icon="create-outline" tabindex="-1"></span></a>
                </div>
            </div>
        </div>

    </div>
</form>
<div class="mat productSection my-column my-clipped uk-margin-small-top">
    <a><span class="icon-holder uk-position-absolute uk-margin-small-top uk-margin-left" uk-icon="backIcon"></span></a>
    <div class="my-row uk-margin-top">
        <div class="uk-inline productCategory uk-margin-top" style="left:0;">
            <a class="uk-form-icon uk-margin-auto-vertical" href="#"><span class="icon-holder" uk-icon="add-outline"></span></a>
            <input class="uk-input" type="text">
        </div>
        <h3 class="center">:افزودن دسته بندی</h3>
    </div>

    <div class="my-row CategoryList">
        <div class="category">
            لبنیات
        </div>
        <div class="category">
            پروتئینی
        </div>
        <div class="category">
            خشکبار
        </div>
        <div class="category">
            نوشیدنی
        </div>
        <div class="category">
            لبنیات
        </div>

    </div>
    <hr />
    <h3 class="center"><a href="#AddProduct" uk-toggle><span class="icon-holder" uk-icon="add-circle-outline"></span></a>افزودن محصول</h3>
    <div class="my-row uk-padding-small AddProductSection" dir="rtl">
        <div class="my-column uk-margin-small-right uk-text-center">
            <label>نام محصول</label>
            <div class="my-row">
                <label class="uk-margin-top">قیمت</label>
                <label class="OFFPercent uk-margin-top">%</label>
            </div>
        </div>
        <div class="ProductPicture center uk-text-center uk-margin-auto-right uk-margin-small-left">
            تصویر
        </div>
    </div>
    <hr />
    
</div>
<div class="space-double"></div>
<div class="space-mobile"></div>
<div id="AddProduct" uk-modal>
    <div class="uk-modal-dialog uk-margin-auto-vertical " uk-overflow-auto dir="rtl">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <form class="my-column createAccount uk-padding-small" action="" dir="rtl">
            <div class="uk-modal-header uk-margin-bottom">
                <h3 class="uk-modal-title uk-text-center">افزودن محصول</h3>
            </div>
            <div class="uk-modal-body my-column uk-padding-small">
                <div class="uk-margin">
                    <select class="uk-select">
                        <option>انتخاب دسته بندی</option>
                        <option>خشکبار</option>
                        <option>لبنیات</option>
                    </select>
                </div>
                <label for="name">نام محصول:</label>
                <input type="text" name="Name">
                <label for="price">قیمت(تومان):</label>
                <input type="text" name="Name">
                <label for="off">درصد تخفیف:</label>
                <input type="text" name="off">
                <div class="uk-margin ">
                    <div class="my-row" uk-form-custom>
                        @*<label>انتخاب تصویر برای محصول</label>*@
                        <input type="file">
                        @*< class="uk-button uk-button-default" type="button" tabindex="-1"><span class="icon-holder" uk-icon="attach"></span>انتخاب تصویر محصول</button>*@
                        <button class="uk-margin-top serviceArea ">انتخاب تصویر برای محصول<span class="icon-holder uk-margin-small-left uk-margin-small-right" uk-icon="attach"></span></button>
                    </div>
                </div>
            </div>
            <div class="uk-modal-footer uk-text-center uk-margin-top">
                <input class="center gradientButton" type="submit" value="افزودن">
            </div>
        </form>
    </div>
</div>
