@section Script{

    <link href="~/leaflet/leaflet.css" rel="stylesheet" />
    <script src="~/leaflet/leaflet.js"></script>
    <script>

        var map = L.map('map').setView([38.07674409597339, 46.29700302496191], 11);

        L.tileLayer('https://a.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'echoville'
        }).addTo(map);

        var theMarker = {};

        map.on('click', function (e) {
            lat = e.latlng.lat;
            lon = e.latlng.lng;

            //Clear existing marker,

            if (theMarker != undefined) {
                map.removeLayer(theMarker);
            };

            var iconSetting = L.Icon.extend({
                options: {
                    iconSize: [20, 29],
                    iconAnchor: [10, 29]
                }
            });

            var customIcon = new iconSetting({ iconUrl: '/location.png' });
            //Add a marker to show where you clicked.
            $("#Lat").val(lat.toString());
            $("#Lon").val(lon.toString());
            theMarker = L.marker([lat, lon], { icon: customIcon }).addTo(map).bindPopup('<h6 style="color:green">موقعیت فروشگاه شما ثبت شد</h6>').openPopup();
        });

    </script>
    <script>
        function closeStore() {
            if (document.getElementById("door").style.height == "23px") {
                document.getElementById("door").style.height = "8px";
                document.getElementById("StoreStatus").innerHTML = "بستن فروشگاه";
                document.getElementById("statusResult").style.color = "#32d296";
                document.getElementById("statusResult").innerHTML = "باز";
            } else {
                document.getElementById("door").style.height = "23px";
                document.getElementById("StoreStatus").innerHTML = "بازکردن فروشگاه";
                document.getElementById("statusResult").style.color = "red";
                document.getElementById("statusResult").innerHTML = "بسته";
            }
        }
    </script>
    
}