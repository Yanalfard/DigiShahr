
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>بازیابی رمز عبور</title>
    <link href="~/UIKit/css/uikit.min.css" rel="stylesheet" />
    <link href="~/StyleCenter/Sass/Controls.min.css" rel="stylesheet" />
    <link href="~/StyleCenter/Sass/LoginRegister/loginRegister.min.css" rel="stylesheet" />
</head>
<body>
    <div class="RegisterContainer">
        <div class="firstHead"></div>
        <div class="LoginContent my-clipped mat ">
            <div class="center my-column uk-margin-large-top Forget">

                <form class="my-column  uk-padding-small" action="" dir="rtl">
                    @Html.AntiForgeryToken()
                    <h3>شماره تماس خود را وارد کنید</h3>
                    <div class="uk-margin">
                        <div class="uk-inline">
                            <span class="uk-form-icon"><span class="icon-holder" uk-icon="call"></span></span>
                            <input class="uk-input" type="text">
                        </div>
                    </div>

                    <button class="gradientButton center uk-margin-large-top">
                        ارسال
                    </button>
                    <div class="space-double"></div>
                </form>


            </div>
        </div>
    </div>
</body>
</html>
<script src="~/UIKit/js/uikit.min.js"></script>
<script src="/icons/uikit-icons.js"></script>