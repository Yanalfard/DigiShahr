@model DataLayer.Models.TblOrder
@using DigiShahr.Classes
<div class="modal-header">
    <h6 class="modal-title mr-3" id="modalCenterTitle">
        جزئیات سفارش @Model.Id
    </h6>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div id="card-table" class="card-body flex-div">
            <div class="form-row ">
                <div class="form-group col-md-5">
                    <label>کد سفارش:</label>
                    <span>@Model.Id</span>
                </div>
                <div class="form-group col-md-5">
                    <label>نام مشتری:</label>
                    <span>@Model.User.Name</span>
                </div>
                <div class="form-group col-md-5">
                    <label>شماره تماس مشتری:</label>
                    <span>@Model.User.TellNo</span>
                </div>
                <div class="form-group col-md-5">
                    <label>نام فروشگاه:</label>
                    <a href="#"><span>@Model.Store.Name</span></a>
                </div>
                <div class="form-group col-md-5">
                    <label>زمان ثبت سفارش:</label>
                    <span>@Model.DateSubmited.AllToShamsi()</span>
                </div>
                <div class="form-group col-md-5">
                    <label>وضعیت تایید اعتبار:</label>
                    @if (Model.IsValid == true)
                    {
                        <span class="text-success">تایید شده</span>
                    }
                    else
                    {
                        <span class="text-warning">تایید نشده</span>
                    }
                </div>
                <div class="form-group col-md-5">
                    <label>جمع کل سفارش</label>
                    <span id="PriceSpan">@Model.Price</span>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>کد سفارش</th>
                        <th>محصول</th>
                        <th>تعداد</th>
                        <th>قیمت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TblOrderDetails)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Count</td>
                            <td><span id="PriceSpan">@item.Product.Price</span></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</form>

<script src="~/ScriptCenter/Tools/Span_Formatting_Currency.js"></script>


